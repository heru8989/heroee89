{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "declaration": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}